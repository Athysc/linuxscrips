[global]
   workgroup = WORKGROUP
   server string = Pika OS Server
   security = user
   map to guest = Bad User
   smb encrypt = desired

   # This helps with modern clients
   client min protocol = SMB2
   client max protocol = SMB3
   server min protocol = SMB2
   server max protocol = SMB3

[SharedMedia]
   path = /mnt/MediaData/MediaLibrary
   browseable = yes
   writable = yes
   read only = no
   valid users = scdev
   create mask = 0644
   directory mask = 0755

[SharedMediaChinese]
   path = /mnt/AppData/VidsChineseShows
   browseable = yes
   writable = yes
   read only = no
   valid users = scdev
   create mask = 0644
   directory mask = 0755
